  <div class="form-inputs">
    <%= f.input :titol_ca %>
    <%= f.input :resum_ca %>
    <%= f.input :permalink_ca %>
    <%= f.input :contingut_ca %>
    <%= f.input :titol_es %>
    <%= f.input :resum_es %>
