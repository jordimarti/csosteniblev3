<%= simple_form_for(@video) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :titol_ca %>
    <%= f.input :resum_ca %>
    <%= f.input :permalink_ca %>
    <%= f.input :contingut_ca %>
    <trix-editor input="video_contingut_ca"></trix-editor>
    <%= f.input :titol_es %>
    <%= f.input :resum_es %>
    <%= f.input :permalink_es %>
    <%= f.input :contingut_es %>
    <%= f.input :categoria %>
    <%= f.input :image, as: :hidden, input_html: {value: @video.cached_image_data} %>
    <%= f.input :image, as: :file %>
    <% if @video.image_data? %>
      Remove attachment: <%= f.check_box :remove_image %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
