<div class="container">
	<div class="grid-x">
	  <div class="medium-3 cell">
	    <%= link_to( image_tag('https://s3-eu-west-1.amazonaws.com/csosteniblev3/imatges/logo_agenda_2015_hd.png', :alt => 'Logo Agenda de la Construcció Sostenible', :class => 'logo-agenda'), {:controller => '/home', :action => 'index'}) %>
	  </div>
	  <div class="medium-9 cell">
	  	<ul class="menu menu-top right-align">
			  
			  <% if params[:locale] == 'ca' %>
			  	<li><%= link_to 'Español', :locale => 'es' %></li>
			  <% else %>
			  	<li><%= link_to 'Català', :locale => 'ca' %></li>
			  <% end %>
			  
			  <% if user_signed_in? %>
			  	<li><a href="#"><%= current_user.email %></a></li>
			  	<ul class="dropdown">
            <li><%= link_to t('.account_configuration'), edit_user_registration_path %></li>
            <li><%= link_to t('.sign_out'), destroy_user_session_path, method: :delete %></li>
          </ul>
        <% else %>
		      
	        <li><%= link_to t('.register'), new_user_registration_path, :class => 'sessionbar-link'  %></li>
	        
	        <li><%= link_to t('.sign_in'), new_user_session_path, :class => 'sessionbar-link'  %></li>
		     
		    <% end %>
			</ul>
	  </div>
	</div>
</div>
