<%= simple_form_for(@tipus_indicador) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nom_ca %>
    <%= f.input :nom_es %>
    <%= f.input :nom_en %>
    <%= f.input :unitats %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
