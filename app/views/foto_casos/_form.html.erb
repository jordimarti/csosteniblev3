<%= simple_form_for(@foto_cas) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :image_data %>
    <%= f.input :cas_practic_id %>
    <%= f.input :text_ca %>
    <%= f.input :text_es %>
    <%= f.input :text_en %>
    <%= f.input :image, as: :hidden, input_html: {value: @foto_cas.cached_image_data} %>
    <%= f.input :image, as: :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
